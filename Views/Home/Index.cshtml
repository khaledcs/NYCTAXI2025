@{
    ViewBag.Title = "Home Page";
}

<style>
    body, html {
        height: 100%;
        padding: 0;
    }

    .btn {
        border: 2px solid black;
        background-color: transparent;
        color: black;
        padding: 14px 28px;
        font-size: 26px;
        cursor: pointer;
        width: 200px;
    }

    /* Orange */
    .warning {
        border-color: #ff9800;
        color: orange;
    }

        .warning:hover {
            background: #ff9800;
            color: white;
        }
</style>

<div id="main" class="bg">
    <div class="captionFade col-xs-10 col-xs-offset-1" style="top:50%">
        <div class="captionBG HomeLine1" style="margin-top:-260px">
            <img class="captionBGLogo" src="~/Images/LogoBG.png" />
        </div>
        <div class="captionBG HomeLine2" style="margin-top:-140px; font-family: 'Times New Roman', Times, serif;">
            <p>NYC Taxi Reservation Service</p>
        </div>
        <div class="captionBG HomeLine3" style="margin-top:-70px; font-family: 'Times New Roman', Times, serif;">
            <p style="color: #f0ad4e;">CS 714 Course Project</p>
        </div>
        <div class="captionBG HomeLine4" style="font-family: 'Times New Roman' , Times, serif;">
            <p>Supervised by Dr. Lisa Fan</p>
        </div>
        <div class="captionBG HomeLine5" style="margin-top: 70px; font-family: 'Times New Roman', Times, serif;">
            <p style="color: #f0ad4e;">Project Developed by: Rouzbeh and Khaled</p>
        </div>
        <div class="captionBG HomeLine6" style="margin-top: 180px; font-family: 'Times New Roman', Times, serif;    ">
            <button type="button" class="btn btn-lg warning" onclick="openPanel()">Join Us</button>
        </div>
    </div>

    <div id="Sign-Panel" style="left:0;" class="overlay">
        <a href="javascript:void(0)" class="closebtn" onclick="closePanel()">&times;</a>
        <div id="content" class="overlay-content">
            <div style="margin-bottom: 5px;">Welcome to NYC Taxi</div>
            <form action="~/Users/Login">
                <input type="submit" class="btn btn-lg warning" style="margin-bottom: 40px" value="Login" />
            </form>
            <div style="margin-bottom: 5px;">New around here?</div>
            <form action="~/Users/Create">
                <input type="submit" class="btn btn-lg warning" value="Sign Up" />
            </form>
            <div id="Rider" class="col-xs-3 col-xs-offset-1 smallScreen" style="text-align: left; margin-top: -200px;">
                <p style="font-size:36px; margin-top: -50px">&#9776; Ride</p>
                <p style="color:#f0ad4e; font-size:32px; margin-top: 0px">1. Find a Driver</p>
                <p style="font-size:20px;">
                    NYC Taxis will find you the nearest
                    available drivers to choose from.
                </p>
                <p style="color:#f0ad4e; font-size:32px; margin-top: 30px">2. Track Your Driver</p>
                <p style="font-size:20px;">
                    Know your driver’s location and estimated time of arrival in real-time.
                </p>
            </div>
            <div id="Driver" class="col-xs-3 col-xs-offset-4 smallScreen" style="text-align: left; margin-top: -200px;" ">
                <p style="font-size:36px; margin-top: -50px">&#9776; Drive</p>
                <p style="color:#f0ad4e; font-size:32px; margin-top: 0px">1. Get Opportunities</p>
                <p style="font-size:20px;">
                    NYC Taxi will notify you by SMS whenever
                    you get a new reservation request.
                </p>
                <p style="color:#f0ad4e; font-size:32px; margin-top: 30px">2. Find Directions</p>
                <p style="font-size:20px;">
                    See the directions from pickup location to destination
                    with distance and traffic information.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openPanel() {
            document.getElementById("Sign-Panel").style.width = "100%";
            document.getElementById("content").style.opacity = 1;
            document.getElementById("content").style.transition = "2s ease-in";
        }

        function closePanel() {
            document.getElementById("content").style.transition = "0s";
            document.getElementById("content").style.opacity = 0;
            document.getElementById("Sign-Panel").style.width = "0%";
        }

        window.onload = function() {
            document.getElementById("main").style.transition = "1.5s ease-in";
            document.getElementById("main").style.opacity = 1;
        }
    </script>
}