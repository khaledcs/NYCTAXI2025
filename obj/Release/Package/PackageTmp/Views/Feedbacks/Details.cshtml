@model ABC_Taxi_System.Models.Feedback

@{
    ViewBag.Title = "Feedback Details";
}

@if (ViewData.ContainsKey("UserType") && ViewData["UserType"].ToString() != "Passenger" ||
    ViewData.ContainsKey("Username") && ViewData["Username"].ToString() != (Model.Reservation.User_Passenger.Username))
{
    <div class="alert alert-warning text-align-center" style="margin-top:20px;">
        Sorry, you do not have the permission to access this page. @ViewBag.Message<strong><a href="/Home/Index">Go Back to Home Page</a></strong>
    </div>
}
else
{
    <h2>Feedback Details</h2>
    <h4>For: @Model.Reservation.User_Passenger.FirstName @Model.Reservation.User_Passenger.LastName | @Model.Reservation.User_Passenger.Username</h4>

    <div>
        <hr />
        <dl class="dl-horizontal">

            <div>
                <h4>Feedback Details:</h4>
                <hr />
            </div>

            <dt>
                @Html.DisplayNameFor(model => model.Rating)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Rating)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comment)
            </dd>

            <div>
                <hr />
                <h4>Pick-Up Details:</h4>
                <hr />
            </div>

            <dt>
                @Html.DisplayNameFor(model => model.Reservation.PickUpDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Reservation.PickUpDate)
            </dd>

            <dt>
                @Html.DisplayName("Pick-Up Location")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Reservation.PickUpStreetNo)
                @Html.DisplayFor(model => model.Reservation.PickUpRoute)
                @Html.DisplayFor(model => model.Reservation.PickUpCity)
                @Html.DisplayFor(model => model.Reservation.PickUpProvince)
                @Html.DisplayFor(model => model.Reservation.PickUpZipCode)
            </dd>

            <div>
                <hr />
                <h4>Destination Details:</h4>
                <hr />
            </div>

            <dt>
                @Html.DisplayName("Destination Location")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Reservation.DropStreetNo)
                @Html.DisplayFor(model => model.Reservation.DropRoute)
                @Html.DisplayFor(model => model.Reservation.DropCity)
                @Html.DisplayFor(model => model.Reservation.DropProvince)
                @Html.DisplayFor(model => model.Reservation.DropZipCode)
            </dd>

            <div>
                <hr />
                <h4>Driver Details:</h4>
                <hr />
            </div>

            <dt>
                @Html.DisplayName("Driver")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.FirstName)
                @Html.DisplayFor(model => model.User.LastName)
            </dd>
            <hr />

        </dl>
    </div>
    <p>
        @Html.ActionLink("Update", "Edit", new { id = Model.Feedback_Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}