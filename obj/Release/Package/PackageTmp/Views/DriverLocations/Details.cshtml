@model ABC_Taxi_System.Models.DriverLocation

@{
    ViewBag.Title = "Driver Location Details";
}

<div class="container body-content">
    @if ((ViewData.ContainsKey("UserType") && ViewData["UserType"].Equals("Passenger")) ||
        (ViewData.ContainsKey("UserType") && ViewData["UserType"].Equals("Driver") && ViewData.ContainsKey("Username") && ViewData["Username"].ToString() != Model.Driver))
    {
        <div class="alert alert-warning text-align-center" style="margin-top:20px;">
            Sorry, you do not have the permission to access this page. @ViewBag.Message<strong><a href="/Home/Index">Go Back to Home Page</a></strong>
        </div>
    }
    else
    {
        <h2>Location Details</h2>
        <h4>For: @Model.User.FirstName @Model.User.LastName | @Model.User.Username</h4>
        <div>
            <hr />
            <dl class="dl-location-horizontal">
                @if (Model.StreetNo != null)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.StreetNo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StreetNo)
                    </dd>
                }

                <dt>
                    @Html.DisplayNameFor(model => model.Route)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Route)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.City)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Province)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Province)
                </dd>

                @if (Model.ZipCode != null)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.ZipCode)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ZipCode)
                    </dd>
                }
            </dl>
        </div>
        <p>
            @Html.ActionLink("Update", "Edit", new { id = Model.Driver }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.Driver }) |
            @if (ViewData.ContainsKey("UserType") && ViewData["UserType"].Equals("Operator"))
            {
                @Html.ActionLink("Back to List", "Index", "DriverLocations")
            }
            else
            {
                @Html.ActionLink("Back to Home", "Index", "Home")
            }
        </p>
    }
</div>