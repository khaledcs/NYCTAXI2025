@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Users", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right" style="margin-right:0">
            <li><a href="/Users/Details/@ViewData["Username"]"><i class="fas fa-user-cog"></i> Hello, @ViewData["FullName"]!</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Users/Create"><i class="fas fa-user-alt"></i> Sign Up</a></li>
        <li><a href="/Users/Login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
    </ul>
}